<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.InputLayout.HintTextAppearance">
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="AppTheme.InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corners_8dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corners_8dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corners_8dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/corners_8dp</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">@dimen/line_size</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxBackgroundColor">@color/colorPrimaryWithAlpha10</item>
        <item name="hintTextAppearance">@style/AppTheme.InputLayout.HintTextAppearance</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="AppTheme.TextView.UI1">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:textSize">@dimen/text_size_16dp</item>
    </style>

    <style name="AppTheme.TextView.UI2">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:lineSpacingExtra">1dp</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>
</resources>
